{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@assets": [
        "./src/assets/index.ts"
      ],
      "@scenes": [
        "./src/scenes/index.ts"
      ],
      "@entities": [
        "./src/entities/index.ts"
      ],
      "@constants": [
        "./src/constants/index.ts"
      ],
    }
  },
  "include": ["src"]
}
